{
    "compilerOptions": {
        "outDir": "./_website",
        "sourceMap": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "baseUrl": "./app/",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [ "es6", "dom" ],
        "types": ["reflect-metadata", "mocha"],
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "paths": {
            "Routes": ["src/Routes"],
            "VueApp": ["src/VueApp"],
            "components/*": ["src/components/*"],
            "dataTypes/*": ["src/dataTypes/*"],
            "services/*": ["src/services/*"],
            "scopes/*": ["src/scopes/*"],
            "pages/*": ["src/pages/*"],

            "specTools": ["spec/specTools"],
        }
    },
    // "files": [
    //     "./app/app.ts"
    // ],
    "include": [
        "./app/**/*",
        //"./spec/**/*",
        "./node_modules/reflect-metadata/index.d.ts"
    ],
    "exclude": [
        //"node_modules"
    ]
}   