{
    "compilerOptions": {
        "outDir": "./website-dev",
        "sourceMap": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [ "es6", "dom" ],
        "types": ["reflect-metadata", "mocha"],
        "declaration": true,
        "paths": {
            "ServiceIdentifier": ["app/ServiceIdentifier"]
        }
    },
    "include": [
        "./app/**/*",
        "./spec/**/*",
        "./node_modules/reflect-metadata/index.d.ts"
    ],
    "exclude": [
        //"node_modules"
    ]
}   